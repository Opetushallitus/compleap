{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "LocalizedString": {
      "type": "object",
      "properties": {
        "fi": { "type" : "string" },
        "sv": { "type" : "string" },
        "en": { "type" : "string" }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "Status": {
      "type": "object",
      "properties": {
        "completed": { "type": "boolean" },
        "date": { "type": "string" }
      },
      "required": ["completed"],
      "additionalProperties": false
    },
    "Unit": {
      "type": "object",
      "properties": {
        "uri": { "type": "string" },
        "name": { "$ref": "#/definitions/LocalizedString" }
      },
      "required": [
        "uri",
        "name"
      ],
      "additionalProperties": false
    }
  },

  "title": "VerifiedEducationModel",
  "type": "object",
  "properties": {
    "placeOfStudy": { "#ref": "#/definitions/LocalizedString" },
    "uri": { "type": "string" },
    "name": { "$ref": "#/definitions/LocalizedString" },
    "qualificationTitles": {
      "type": "array",
      "items": { "$ref": "#/definitions/LocalizedString" }
    },
    "status": { "$ref": "#/definitions/Status" },
    "children": {
      "type": "array",
      "items": { "$ref": "#/definitions/Unit" }
    }
  },
  "required": [
    "placeOfStudy",
    "uri",
    "name",
    "qualificationTitles",
    "status",
    "children"
  ],
  "additionalProperties": false
}